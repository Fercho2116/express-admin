<main class="col-md-8 m-auto col-lg-10 px-md-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Photos</h2>
                    </div>
                    <div class="col-sm-7">
                        <a href="/photos/add" class="btn btn-secondary">
                            <i class="material-icons">&#xE147;</i> <span>Add New Photo</span>
                        </a>
                        <a href="#" class="btn btn-secondary">
                            <i class="material-icons">&#xE24D;</i> <span>Export to Excel</span>
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Ruta</th>
                        <th>Etiqueta</th>
                        <th>Imagen</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% arrFotos.forEach((foto) => { %>
                        <tr>
                            <td><%= foto.id %></td>
                            <td><%= foto.titulo %></td>
                            <td><%= foto.descripcion %></td>
                            <td><%= foto.ruta %></td>
                            <td>
                                <% if (foto.etiqueta && foto.etiqueta.length > 0) { %>
                                    <ul>
                                        <% foto.etiqueta.forEach((etiqueta) => { %>
                                            <li><%= etiqueta.texto %></li>
                                        <% }); %>
                                    </ul>
                                <% } else { %>
                                    <span class="text-muted">Sin etiquetas</span>
                                <% } %>
                            </td>
                            <td>
                                <img width="20%" height="20%" src="<%= foto.url %>" alt="Imagen de <%= foto.titulo %>"/>
                            </td>
                            <td>
                                <a href="/photos/edit/<%= foto.id %>" class="settings" title="Settings" data-toggle="tooltip">
                                    <i class="material-icons">&#xE8B8;</i>
                                </a>
                                <a href="/photos/delete/<%= foto.id %>" class="delete" title="Delete" data-toggle="tooltip">
                                    <i class="material-icons">&#xE5C9;</i>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="d-flex flex-column">
                    <div class="hint-text">Showing <b>5</b> out of <b>25</b></div>
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a href="#" class="page-link">Previous</a>
                        </li>

                        <li class="page-item">
                            <a href="#" class="page-link">1</a>
                        </li>

                        <li class="page-item">
                            <a href="#" class="page-link">2</a>
                        </li>

                        <li class="page-item active">
                            <a href="#" class="page-link">3</a>
                        </li>

                        <li class="page-item">
                            <a href="#" class="page-link">4</a>
                        </li>

                        <li class="page-item">
                            <a href="#" class="page-link">5</a>
                        </li>

                        <li class="page-item">
                            <a href="#" class="page-link">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>